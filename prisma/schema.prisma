generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StreamedImages {
  id                 Int               @id @default(autoincrement())
  imageUuid          String            @default(uuid())
  imageUrl           String
  description        String?
  color              String?
  width              Int
  height             Int
  unsplash_id        String
  Likes              Likes[]
  UserImageSession   UserImageSession? @relation(fields: [userImageSessionId], references: [id])
  userImageSessionId Int?
}

model User {
  id               Int                @id @default(autoincrement())
  userUuid         String             @default(uuid())
  createdAt        DateTime           @default(now())
  username         String?
  Likes            Likes[]
  UserImageSession UserImageSession[]
}

model UserImageSession {
  id        Int              @id @default(autoincrement())
  sessionId String           @default(uuid())
  user      User             @relation(fields: [userId], references: [id])
  images    StreamedImages[]

  userId Int
}

model Likes {
  id              Int            @id @default(autoincrement())
  streamedImageId Int
  userId          Int
  
  post            StreamedImages @relation(fields: [streamedImageId], references: [id])
  user            User           @relation(fields: [userId], references: [id])
}
